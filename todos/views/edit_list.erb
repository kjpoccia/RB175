<section id="todos">
	<header>
		<h2>Editing <%= @list[:name] %></h2>
		<ul>
			<form action="/lists/<%= @index %>/delete" method="post" class="delete"><button type="submit" class="delete">Delete List</button>
			</form>
		</ul>
	</header>
</section>

<form action="/lists/<%= @index %>/edit" method="post">
	<dl>
		<dt>
			<label for="list_name">Enter the new name for the list:</label>
		</dt>
		<dd>
			<input name="list_name" placeholder="List Name" type="text" value="<% params[:list_name] || @list[:name] %>">
		</dd>
	</dl>
	<fieldset class="actions">
		<input type="submit" value="Save">
		<a href="/lists/<%= @index %>">Cancel</a>
	</fieldset>
</form>